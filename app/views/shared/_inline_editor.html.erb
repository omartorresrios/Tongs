<div class="inline-editor" id="inline-editor" data-page="inline-editor">
  
  <div id="cont-main" class="cont-main">
    <div class="editor-metadata">
      <%= avatar_for(current_user, size: 40) %>
      <strong class="editor-username"><%= current_user.username %></strong>
    </div>
  </div>
  
  <div id="short-form" style="display: inline;">
    <%= form_for @dashboard.new_post, remote: true,  html: { multipart: true, class: "editor-form", autocomplete: "off" } do |f| %>
      <div class="form-group hide" id="title-dashS">
        <%= f.text_field :title, class: 'editor-title', placeholder: 'TÃ­tulo', onfocus: "this.value = this.value;" %>
      </div>

      <div class="form-group">
        <%= f.text_area :body, class: 'medium-editable post-body', id: 'editor-body' %> 
      </div>

      <div class="form-group">
        <%= f.text_field :all_tags %>
      </div>

      <button class="button green-border-button">Publicar</button>
      <button class='button green-border-button cancel-button' data-behavior="editor-cancel">Cancelar</button>
    <% end %>
  </div>
</div>